<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="40.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buynearme.client.HomeController">
    
    <padding>
        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
    </padding>

    <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="🏪 BuyNearMe">
        <font>
            <Font name="System Bold" size="48.0" />
        </font>
    </Label>
    
    <Label style="-fx-text-fill: white; -fx-opacity: 0.8;" text="Store Locator System">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="clientButton" minHeight="60" minWidth="200" onAction="#onClientButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-padding: 15 30; -fx-background-radius: 10;" text="👤 Client" />
        
        <Button fx:id="adminButton" minHeight="60" minWidth="200" onAction="#onAdminButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-padding: 15 30; -fx-background-radius: 10;" text="🛠 Admin" />
    </VBox>

</VBox>
